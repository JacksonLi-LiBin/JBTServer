<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>JBT</display-name>
	<welcome-file-list>
		<welcome-file>index_login.html</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>com.matrix.jbt.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>ignore</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>com.matrix.jbt.restful;</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Jersey REST Service</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>UploadImageServlet</display-name>
		<servlet-name>UploadImageServlet</servlet-name>
		<servlet-class>com.matrix.jbt.servlet.UploadImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UploadImageServlet</servlet-name>
		<url-pattern>/UploadImageServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>GetAdintermissionServlet</display-name>
		<servlet-name>GetAdintermissionServlet</servlet-name>
		<servlet-class>com.matrix.jbt.servlet.GetAdintermissionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetAdintermissionServlet</servlet-name>
		<url-pattern>/GetAdintermissionServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>EditAdServlet</display-name>
		<servlet-name>EditAdServlet</servlet-name>
		<servlet-class>com.matrix.jbt.servlet.EditAdServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EditAdServlet</servlet-name>
		<url-pattern>/EditAdServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>AddAlertPeriodServlet</display-name>
		<servlet-name>AddAlertPeriodServlet</servlet-name>
		<servlet-class>com.matrix.jbt.servlet.AddAlertPeriodServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddAlertPeriodServlet</servlet-name>
		<url-pattern>/AddAlertPeriodServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>EmailServlet</display-name>
		<servlet-name>EmailServlet</servlet-name>
		<servlet-class>com.matrix.jbt.servlet.EmailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EmailServlet</servlet-name>
		<url-pattern>/EmailServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>UpdateOutTimeServlet</display-name>
		<servlet-name>UpdateOutTimeServlet</servlet-name>
		<servlet-class>com.matrix.jbt.servlet.UpdateOutTimeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateOutTimeServlet</servlet-name>
		<url-pattern>/UpdateOutTimeServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>GetDataFromJBServlet</display-name>
		<servlet-name>GetDataFromJBServlet</servlet-name>
		<servlet-class>com.matrix.jbt.servlet.GetDataFromJBServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetDataFromJBServlet</servlet-name>
		<url-pattern>/GetDataFromJBServlet</url-pattern>
	</servlet-mapping>
</web-app>